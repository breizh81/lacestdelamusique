{% extends '@App/backend/base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ "homework's list" | trans }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-8">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th class="text-center">{{ 'label' | trans }}</th>
                    <th class="text-center">{{ 'automatic validation' | trans }}</th>
                    <th class="text-center">{{ 'actions' | trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for devoir in devoirs %}
                    <tr>
                        <td class="text-center">{{ devoir.label }}</td>
                        <td class="text-center">{% if devoir.automaticValidation %}{{ 'yes' | trans }}{% else %}{{ 'no' | trans }}{% endif %}</td>
                        <td class="text-center">
                            <div style="margin-bottom: 5px">
                                <a class="btn btn-xs btn-primary"
                                   href="{{ path('backend_devoir_show', { 'id': devoir.id }) }}"><span
                                            class="glyphicon glyphicon-search"></span> {{ 'show' | trans }}</a>
                            </div>
                            <div style="margin-bottom: 5px">
                                <a class="btn btn-xs btn-primary"
                                href="{{ path('backend_devoir_edit', { 'id': devoir.id }) }}"><span
                                        class="glyphicon glyphicon-edit"></span> {{ 'edit' | trans }}</a>
                            </div>
                            <div style="margin-bottom: 5px">
                                {{ form_start(deleteFormArray[devoir.id]) }}
                                <button type="submit" class="btn btn-xs btn-danger"><span
                                            class="glyphicon glyphicon-trash"></span> {{ 'delete' | trans }}
                                </button>
                                {{ form_end(deleteFormArray[devoir.id]) }}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
