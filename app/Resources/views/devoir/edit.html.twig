{% extends '@App/backend/base.html.twig' %}


{% block body %}


    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'modification' | trans }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-6 well">
            {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(edit_form) }}

            <div class="form-group row">
                {{ form_label(edit_form.label, edit_form.label, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                {{ form_errors(edit_form.label) }}

                <div class="col-sm-4">
                    {{ form_widget(edit_form.label) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(edit_form.automaticValidation, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                {{ form_errors(edit_form.automaticValidation) }}

                <div class="col-sm-4">
                    {{ form_widget(edit_form.automaticValidation) }}
                </div>
            </div>


            {#Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
            {{ form_widget(edit_form.save, {'attr': {'class': 'btn btn-primary'}}) }}

            {# Génération automatique des champs pas encore écrits.
               Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
               et tous les champs cachés (type « hidden »). #}
            {{ form_rest(edit_form) }}

            {# Fermeture de la balise <form> du formulaire HTML #}
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
