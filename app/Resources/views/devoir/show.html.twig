{% extends '@App/backend/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ devoir.label | upper }}</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th class="text-center">{{ 'label' | trans }}</th>
                    <th class="text-center">{{ 'automatic validation' | trans }}</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td class="text-center">{{ devoir.label }}</td>
                    <td class="text-center">{% if devoir.automaticValidation %}{{ 'yes' | trans }}{% else %}{{ 'no' | trans }}{% endif %}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
