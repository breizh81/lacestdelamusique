{% extends 'base.html.twig' %}

{% block body %}
    <h1>Devoir</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ devoir.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ devoir.libelle }}</td>
            </tr>
            <tr>
                <th>Validationautomatique</th>
                <td>{% if devoir.validationAutomatique %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('backend_devoir_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('backend_devoir_edit', { 'id': devoir.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
