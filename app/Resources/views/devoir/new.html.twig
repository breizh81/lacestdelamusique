{% extends '@App/backend/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'homework creation' | trans }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-6 well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}

            <div class="form-group row">
                    {{ form_label(form.label, form.label, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                    {{ form_errors(form.label) }}

                <div class="col-sm-4">
                    {{ form_widget(form.label) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(form.automaticValidation, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                {{ form_errors(form.automaticValidation) }}

                <div class="col-sm-4">
                    {{ form_widget(form.automaticValidation) }}
                </div>
            </div>


             {#Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

            {# Génération automatique des champs pas encore écrits.
               Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
               et tous les champs cachés (type « hidden »). #}
            {{ form_rest(form) }}

            {# Fermeture de la balise <form> du formulaire HTML #}
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}
