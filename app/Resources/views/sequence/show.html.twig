{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sequence</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sequence.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ sequence.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ sequence.summary }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ sequence.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('backend_sequence_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('backend_sequence_edit', { 'id': sequence.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
