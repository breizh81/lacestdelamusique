{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'login-form fos_user_registration_register'}}) }}

{% if(form_errors(form)) %}
    <span class="alert">{{ form_errors(form) }}</span>
{% endif %}

<div class="form-group">
    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'required': 'required', 'placeholder': 'form.email' | trans}}) }}
    <i class="fa fa-user"></i>
    {% if(form_errors(form.email)) %}
        <span class="alert">{{ form_errors(form.email) }}</span>
    {% endif %}
</div>

<div class="form-group">
    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'required': 'required', 'placeholder': 'form.username' | trans}}) }}
    <i class="fa fa-user"></i>
    {% if(form_errors(form.username)) %}
        <span class="alert">{{ form_errors(form.username) }}</span>
    {% endif %}
</div>

<div class="form-group">
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'required': 'required', 'placeholder': 'form.password' | trans}}) }}
    <i class="fa fa-user"></i>
    {% if(form_errors(form.plainPassword.first)) %}
        <span class="alert">{{ form_errors(form.plainPassword.first) }}</span>
    {% endif %}
</div>

<div class="form-group">
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'required': 'required', 'placeholder': 'form.password_confirmation' |trans}}) }}
    <i class="fa fa-user"></i>
    {% if(form_errors(form.plainPassword.second)) %}
        <span class="alert">{{ form_errors(form.plainPassword.second) }}</span>
    {% endif %}
</div>

<input class="log-btn" type="submit" value="{{ 'registration.submit'|trans }}"/>
{{ form_end(form) }}


