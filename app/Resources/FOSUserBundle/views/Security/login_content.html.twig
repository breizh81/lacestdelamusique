{% trans_default_domain 'FOSUserBundle' %}

<div class="login-form">
    <h1>Bienvenue</h1>
    <form action="{{ path("fos_user_security_check") }}" method="post">

        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-group ">
            <input type="text" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="{{ 'security.login.username'|trans }}" id="username">
            <i class="fa fa-user"></i>
        </div>
        <div class="form-group log-status">
            <input type="password" class="form-control" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}" id="password">
            <i class="fa fa-lock"></i>
        </div>

        {% if error %}
            <span class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
        {% endif %}
        <div><input type="checkbox" id="remember_me" name="_remember_me" value="on" /><label class="remember" for="remember_me">{{ 'security.login.remember_me'|trans }}</label></div>

        <div><a class="link" href="#">Lost your password?</a></div>
        <input class="log-btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

    </form>


</div>