{% extends '@App/backend/base.html.twig' %}
{% block title %}
{% if sequence %}
{{ 'Edit'| trans }} {{ sequence.title }}
{% else %}
    {{ 'Create sequence'| trans }}
{% endif %}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/app/Backend/summernote/summernote-lite.css') }}" rel="stylesheet">
{% endblock %}
{% block headerscripts %}
    {{ parent() }}
    {#<script src="{{ asset('bundles/app/Backend/summernote/jQuery.js') }}"></script>#}
    <script src="{{ asset('bundles/app/Backend/summernote/summernote-lite.js') }}"></script>

    <!-- include summernote-fr-FR -->
    <script src="{{ asset('bundles/app/Backend/summernote/lang/summernote-fr-FR.js') }}"></script>
{% endblock %}
{% block body %}
    {{ form_start(edit_form,{"attr":{"class":"form-horizontal"}}) }}

    {# Les erraurs générales du formulaire.#}
    {{ form_errors(edit_form) }}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {% if sequence %} }
                {{'Edit sequence' | trans  }} {{ sequence.title }}
                {% else  %}
                {{ 'Create sequence'| trans }}
                {% endif %}
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
<div class="row">
    <div class="col-lg-8">
    {# Génération du label + erreur + widget pour un champ#}
    {{ form_label(edit_form.title) }}
        {{ form_widget(edit_form.title) }}

    </div>
</div>
    <div class="row">
        <div class="col-lg-8">
            {# Génération du label + erreur + widget pour un champ#}
            {{ form_label(edit_form.comment) }}
            {{ form_widget(edit_form.comment) }}

        </div>
    </div>
    {#{{ form_label(edit_form.title) }}#}
        {{ form_widget(edit_form) }}
        <input type="submit" value="{{ 'Submit' | trans }}" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('backend_sequence_index') }}">{{ 'Back to the list' | trans }}</a>
        </li>

           {% if delete_form %}
               <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="{{ 'Delete' | trans }}">
            {{ form_end(delete_form) }}
               </li>
            {% endif %}


    </ul>
    <div class="summernote" ></div>
    <script>
        $('.summernote').summernote({
            height: 300,                 // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null,             // set maximum height of editor
            focus: true,                 // set focus to editable area after initializing summernote
            lang: 'fr-FR'                // default: 'en-US'
        });
    </script>


{% endblock %}


