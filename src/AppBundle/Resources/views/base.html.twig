<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}{% endblock %}</title>

    {% block stylesheets %}


        <!-- Bootstrap Core CSS -->

        <link href="{{ asset('bundles/app/Default/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Custom Fonts -->

        <link href="{{ asset('bundles/app/Default/vendor/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet"
              type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic"
              rel="stylesheet" type="text/css">

        <!-- Custom CSS -->
        <link href="{{ asset('bundles/app/Default/css/stylish-portfolio.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/app/Default/css/tab-portfolio.css') }}" rel="stylesheet">

    {% endblock %}
</head>

<body>
<!-- Navigation -->
<a id="menu-toggle" href="#" class="btn btn-dark btn-lg toggle">
    <i class="fa fa-bars"></i>
</a>
<nav id="sidebar-wrapper">
    <ul class="sidebar-nav">
        <a id="menu-close" href="#" class="btn btn-light btn-lg pull-right toggle">
            <i class="fa fa-times"></i>
        </a>
        <li class="sidebar-brand">
            {#current route#}
            <a class="js-scroll-trigger" href="{{ path(app.request.attributes.get('_route')) }}">Là c'est de la
                musique</a>
        </li>
        <li>
            <a class="js-scroll-trigger" href="{{ path('homepage') }}">{{ 'home' | trans }}</a>
        </li>

        <li>
            <a class="js-scroll-trigger" href="#about">{{ 'about' | trans }}</a>
        </li>
        <li>
            <a class="js-scroll-trigger" href="#services">Services</a>
        </li>
        <li>
            <a class="js-scroll-trigger" href="#portfolio">Portfolio</a>
        </li>
        <li>
            <a class="js-scroll-trigger" href="#contact">Contact</a>
        </li>

        {% if app.user %}

            {% if('ROLE_ADMIN' in app.user.roles) %}
                <li>
                    <a class="js-scroll-trigger" href="{{ path('backend') }}" )>Backoffice</a>
                </li>
            {% endif %}

            <li>
                <a class="js-scroll-trigger" href="{{ path('fos_user_security_logout') }}" )>{{ 'logout' | trans }}</a>
            </li>

        {% else %}
            <li>
                <a class="js-scroll-trigger" href="{{ path('fos_user_security_login') }}" )>{{ 'login' | trans }}</a>
            </li>
        {% endif %}


    </ul>
</nav>
{% block content %}


{% endblock %}
<!-- Footer -->
<footer>

    <!-- Call to Action -->
    <aside class="call-to-action bg-colour text-white">
        <div class="container text-center">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 mx-auto text-center">
                        <h4>
                            <strong>Là c'est de la musique</strong>
                        </h4>
                        <i class="fa fa-envelope-o fa-fw"></i>
                        <a href="mailto:name@example.com">name@example.com</a>
                        </li>
                        </ul>
                        <br>
                        <hr class="small">
                        <p class="text-muted">Copyright &copy; lacestdelamusique 2017 crée par bsfcreationsweb.fr</p>
                    </div>
                </div>
            </div>
        </div>
    </aside>

</footer>
<a id="to-top" href="#top" class="btn btn-dark btn-lg js-scroll-trigger">
    <i class="fa fa-chevron-up fa-fw fa-1x"></i>
</a>
{% block javascript %}
    <!-- Bootstrap core JavaScript -->
    <script src="{{ asset('bundles/app/Default/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/app/Default/vendor/popper/popper.min.js') }}"></script>
    <script src="{{ asset('bundles/app/Default/vendor/bootstrap/js/bootstrap.min.js') }}"></script>

    <!-- Plugin JavaScript -->
    <script src="{{ asset('bundles/app/Default/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

    <!-- Custom scripts for this template -->
    <script src="{{ asset('bundles/app/Default/js/stylish-portfolio.js') }}"></script>

{% endblock %}
</body>

</html>
